{{ 'section-hero.css' | asset_url | stylesheet_tag }}
<script src="{{ 'section-hero.js' | asset_url }}" defer></script>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />

<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js" defer></script>

<section class="hero">
  <div class="hero__wrapper swiper" data-swiper-id="{{ section.id }}">
    {% if section.settings.menu != blank and linklists[section.settings.menu] %}
      <ul class="hero__list">
        {% for link in linklists[section.settings.menu].links %}
          <li class="hero__item">
            <a class="hero__link" href="{{ link.url }}">{{ link.title }}</a>
          </li>
          {% unless forloop.last %}
            /
          {% endunless %}
        {% endfor %}
      </ul>
    {% endif %}
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
        {% if block.type == 'Image' and block.settings.image != blank %}
          <div class="hero__image--wrapper swiper-slide" {{ block.shopify_attributes }}>
            {{ block.settings.image | image_url: width: 800 | image_tag: sizes: "100vw", widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840', class: "hero__image image-lazy"
            }}
          </div>
        {% endif %}
      {% endfor %}
    </div>
    <div class="swiper-button-next hero-button-next">
      <svg
        width="100"
        height="20"
        viewBox="0 0 100 20"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        stroke="white"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round">
        <line
          x1="2"
          y1="10"
          x2="98"
          y2="10" />
        <polyline points="90,2 98,10 90,18" />
      </svg>
    </div>
    <div class="swiper-button-prev hero-button-prev">
      <svg
        width="100"
        height="20"
        viewBox="0 0 100 20"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        stroke="white"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round">
        <line
          x1="2"
          y1="10"
          x2="98"
          y2="10" />
        <polyline points="10,2 2,10 10,18" />
      </svg>

    </div>
    <div class="swiper-pagination hero-pagination"></div>
  {% comment %} {% if section.settings.title != blank %}
                                    <h1>{{ section.settings.title }}</h1>
                      {% endif %} {% endcomment %}

  </div>
</section>

{% schema %}
  {
    "name": "Hero Section",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "Welcome to Our Store"
      }, {
        "type": "link_list",
        "id": "menu",
        "label": "Link List",
        "default": "main-menu"
      }
    ],
    "blocks": [
      {
        "type": "Image",
        "name": "Image",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          }
        ]
      }
    ],
    "max_blocks": 5,
    "presets": [
      {
        "name": "Hero Section",
        "category": "Hero",
        "settings": {},
        "blocks": [
          {
            "type": "Image",
            "settings": {
              "image": "shopify://shop_images/default-hero-image.jpg"
            }
          }
        ]
      }
    ]
  }
{% endschema %}