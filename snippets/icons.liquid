<span>
  {% case icon %}
    {% when 'arrow-next' %}
      <svg
        width="100"
        height="20"
        viewBox="0 0 100 20"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        stroke="white"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round">
        <line
          x1="2"
          y1="10"
          x2="98"
          y2="10" />
        <polyline points="90,2 98,10 90,18" />
      </svg>
    {% when "arrow-prev" %}
      <svg
        width="100"
        height="20"
        viewBox="0 0 100 20"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        stroke="white"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round">
        <line
          x1="2"
          y1="10"
          x2="98"
          y2="10" />
        <polyline points="10,2 2,10 10,18" />
      </svg>
  {% else %}

    {% endcase %}
  </span>